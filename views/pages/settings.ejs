    <a href="settings" class="w3-bar-item w3-button w3-padding">settings</a>
  </nav>

  <div style="
	      position:relative;
	      left: 15%;">
    <div class="w3-container w3-green">
      <h1>Welcome to the settings page</h1>
      <p>enable, modify and disable widgets</p>
    </div>
  </div>

  
  <div class="w3-row-padding">
    
    <div style="
		display: inline-block;
		position: relative;
		left: 15%;
		margin: auto;"
         id="facebook">
      <div class="w3-fourth">
	<h2>Facebook widgets</h2>
	<p>enable and disable here</p>
	<div class="dropdown">
	  <button class="boutonmenuprincipal">facebook timeline</button>
	  <div class="dropdown-child">
	    <a href="#">enabled</a>
	    <a href="#">disabled</a>
	  </div>
	</div>
	<div class="dropdown">
	  <button class="boutonmenuprincipal">facebook messages</button>
	  <div class="dropdown-child">
	    <a href="#">enabled</a>
	    <a href="#">disabled</a>
	  </div>
	</div>
	<p>change page to prompt</p>
	<form action="/settings" method="post">
          <div class="form-group">
            <label>timeline to show</label>
            <input type="text" class="form-control" name="email">
          </div>
          <div class="form-group">
            <label>message to show</label>
            <input type="password" class="form-control" name="password">
          </div>
          <button type="submit" class="btn btn-warning btn-lg">Upload</button>
	</form>
      </div>
    </div>
    
